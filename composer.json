{
	"name":        "pxn/phpasyncshell",
	"description": "Run asynchronous shell commands",
	"version":     "0.1.0",
	"type":        "library",
	"homepage":    "http://poixson.com/",
	"license":     "GPL-3",
	"support": {
		"issues": "https://github.com/PoiXson/phpAsyncShell/issues",
		"source": "https://github.com/PoiXson/phpAsyncShell",
		"irc":    "irc://irc.esper.net/poixson"
	},
	"authors": [{
		"name":  "lorenzop",
		"role":  "Developer"
	}],
	"autoload": {
		"psr-4": {
			"pxn\\phpAsyncShell\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"pxn\\phpAsyncShell\\tests\\":    "tests/",
			"pxn\\phpAsyncShell\\examples\\": "examples/"
		}
	},
	"archive": {
		"exclude": [
			"tests/",
			"example/"
		]
	},
	"require": {
		"php":             "5.6.*",
		"pxn/phputils":    "^0.1.2",
		"christiaan/stream-process": "^1.0.1",
		"react/event-loop": "^0.4.1"
	},
	"require-dev": {
		"phpunit/phpunit": "4.7.*"
	}
}
